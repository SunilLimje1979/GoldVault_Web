<!doctype html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Book A Demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="card-title mb-3">Book A Demo</h4>
          <form method="post" novalidate>
            {% csrf_token %}
            {{ form.non_field_errors }}
            <div class="mb-3">
              {{ form.first_name.label_tag }}{{ form.first_name }}
              {% for e in form.first_name.errors %}<div class="text-danger">{{ e }}</div>{% endfor %}
            </div>
            <div class="mb-3">
              {{ form.last_name.label_tag }}{{ form.last_name }}
              {% for e in form.last_name.errors %}<div class="text-danger">{{ e }}</div>{% endfor %}
            </div>
            <div class="mb-3">
              {{ form.phone.label_tag }}{{ form.phone }}
              {% for e in form.phone.errors %}<div class="text-danger">{{ e }}</div>{% endfor %}
            </div>
            <div class="mb-3">
              {{ form.email.label_tag }}{{ form.email }}
              {% for e in form.email.errors %}<div class="text-danger">{{ e }}</div>{% endfor %}
            </div>
            <button class="btn btn-primary" type="submit">Submit Enquiry</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
